{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "nodemon src/index.ts",
    "build": "tsc",
    "lint": "eslint src/**/*.ts --fix",
    "format": "yarn lint && yarn prettier",
    "prettier": "prettier --write",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,js,json,css,scss,html,md}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": "yarn format"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  }
}
